{
  "manifest_version": 3,
  "name": "Jumble Clipper",
  "version": "1.0",
  "description": "Ajoutez du contenu Ã  votre Jumble en un clic",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://jumblecanvas.netlify.app/*"],
  "action": {
    "default_title": "Ajouter au Jumble"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://jumblecanvas.netlify.app/*"],
      "js": ["bridge.js"]
    }
  ]
}

